$('#dialog').html('<%= escape_javascript(render :partial => 'price') %>')
$('#dialog').dialog({ height: 625,width: 730, modal: true });

$(document).ready(function(){

	$(".ajax-progress-1").show();

	var data = $('#book_isbn').text();
	$.get( "books/find_book_price", {isbn: data})
	.done(function( data ) {
		$(".ajax-progress-1").hide();
  	});

	var avg_rating = $("#avg_rating").attr('value');
	$('#star').raty({ readOnly: true,score: avg_rating,number: 5 });
	$('#none_star').raty({ readOnly: true,score: 0,number: 5 });
	var length = $("div[class*='new_separate_star_rating']").length;
	for ( var i = 0; i < length; i++ ){
		var rating = $("#new_rating_" + i).attr('value');
		$("#new_star_" + i).raty({ readOnly: true, score: rating, number: 5 });
	}
});